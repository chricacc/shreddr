generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tag {
  name      String     @id
  exercises Exercise[]
}

model Exercise {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  published   Boolean? @default(false)
  archived    Boolean? @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tags        Tag[]

  @@index(slug)
}
